
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLTE.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Quản lý môn học</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <a href="#" class="btn btn-danger" onclick="Show_Create_Edit('Add',0)">
                    <li class="glyphicon glyphicon-list-alt">
                    </li> Thêm
                </a>
                <table class="table table-striped table-bordered table-hover" id="dataTable-example">
                    <thead>
                        <tr>
                            <th>Mã</th>
                            <th>Tên</th>
                            <th>Mô tả</th>
                            <th>Trạng thái</th>
                            <th>Kiểu</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
@RenderPage("SubjectModel.cshtml")
@RenderPage("Delete.cshtml")
@section Myscripts{
    <script>
        $(document).ready(function Load_danhsach () {
            $("#dataTable-example").DataTable({
                ajax: {
                    url: "/Subject/GetSubject",
                    type: "Post",
                    datatype: "json"
                },
                columns: [
                    { data: "CodeSubject", autowidth: true },
					{ data: "Name", autowidth: true },
					{ data: "Description", autowidth: true },
                    {
                        data: "Status", autowidth: true,
                        render: function (data)
                        {
                            return data == 1 ? "Ngừng hoạt động" : "Đang hoạt động";
                        }
                    },
                    { data:"Type",autowidth:true},
					{
					    data: "ID", autowidth: true, render: function (data)
					    {
					        return `
					        <div class ="col-xs-12 ">
                                <div class ="col-xs-4 ">
                                    <a href="#" onclick="Show_Create_Edit('Edit',${data})">
                                       <div class ="btn btn-sm btn-warning">
                                           <li class ="glyphicon glyphicon-edit"></li>
                                       </div>
                                    </a>
                                </div>


                                <div class ="col-xs-4 ">
                                       <a href="#" onclick="ShowDelete(${data})">
                                           <div class ="btn btn-sm btn-danger">
                                               <li class ="glyphicon glyphicon-trash"></li>
                                           </div>
                                       </a>
                                </div>
                           </div>
								`;
					    }
					}
                ],
                'paging': true,
                'lengthChange': false,
                'searching': true,
                'ordering': false,
                'info': false,
                'responsive': true,
                "scrollY": 500,
            });
        });

        function ShowCreate(type, id) {
            debugger
            $("#SubjectModal").modal("show");
        };


    </script>
}

